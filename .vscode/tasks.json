{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "app: build",
			"type": "npm",
			"script": "build",
			"path": "app",
			"group": "build",
		},
		{
			"label": "app: watch",
			"type": "npm",
			"script": "watch",
			"path": "app",
			"group": "build",
			"isBackground": true,
			"problemMatcher": [
        {
          "pattern": [
            {
              "regexp": ".",
              "file": 1,
              "location": 2,
              "message": 3
            }
          ],
          "background": {
            "activeOnStart": false,
            "beginsPattern": ".",
            "endsPattern": ".",
          }
        }
      ],
		},
		{
			"label": "app: debug",
			"dependsOn": ["app: build", "app: watch"],
		}
	]
}